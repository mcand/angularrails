<!DOCTYPE html>
<html>
<head>
  <title>Movie</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

  <%= render partial: 'shared/nav_bar' %>

  <% if notice.present? %>
    <aside class="alert alert-success alert-dismissible text-center">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= notice %>
    </aside>
  <% end %>
  <% if alert.present? %>
    <aside class="alert alert-danger alert-dismissible text-center">
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <%= alert %>
    </aside>
  <% end %>
  <%= yield %>

  <footer class="text-center">
    <p>&copy; 2015 MoviesApp, Inc. Developed as a test to Samedi by Andre Furquim. </p>
  </footer>
</body>
</html>
